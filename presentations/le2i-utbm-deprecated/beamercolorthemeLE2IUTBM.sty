\ProvidesPackage{beamercolorthemeLE2IUTBM}
   [2016/02/19 Beamer 'LE2I at UTBM' Color Theme]

\mode<presentation>

\RequirePackage{xcolor}

\newcommand{\setbeamercolorXXX}[2]{%
	\setbeamercolor{#1}{#2}%
	\usebeamercolor{#1}%
	\definecolor{#1.fg}{named}{fg}%
	\definecolor{#1.bg}{named}{bg}%
}

\definecolor{LE2IUTBMblue}{RGB}{0,41,75}
\definecolor{LE2IUTBMdarkblue}{RGB}{0,14,26}
\definecolor{LE2IUTBMlightblue}{RGB}{18,123,202}
\definecolor{LE2IUTBMlightestblue}{RGB}{223,239,247}

\definecolor{LE2IUTBMmagenta}{RGB}{153,30,102}
\definecolor{LE2IUTBMdarkmagenta}{RGB}{77,15,51}
\definecolor{LE2IUTBMlightmagenta}{RGB}{204,122,170}
\definecolor{LE2IUTBMlightestmagenta}{RGB}{250,240,246}

\definecolor{LE2IUTBMgreen}{RGB}{0,128,0}

\definecolor{LE2IUTBMdarkgray}{RGB}{99,104,110}
\definecolor{LE2IUTBMlightgray}{RGB}{208,218,231}

\setbeamercolor{normal text}{fg=black}
\setbeamercolor{example text}{fg=LE2IUTBMlightblue}
\setbeamercolor{emphased text}{fg=LE2IUTBMblue}
\setbeamercolor{alerted text}{fg=LE2IUTBMmagenta}
\setbeamercolor{verse}{fg=LE2IUTBMlightblue}
\setbeamercolor{quotation}{fg=LE2IUTBMlightblue}
\setbeamercolor{quote}{fg=LE2IUTBMblue}
\setbeamercolor{semiverbatim}{fg=LE2IUTBMdarkgray}
\setbeamercolor{structure}{fg=LE2IUTBMlightblue}
\setbeamercolor{background canvas}{bg=white}
\setbeamercolor{author in head/foot}{fg=LE2IUTBMdarkgray}
\setbeamercolor{title in head/foot}{fg=LE2IUTBMdarkgray}
\setbeamercolor{date in head/foot}{fg=LE2IUTBMdarkgray}
\setbeamercolor{author}{fg=LE2IUTBMblue}
\setbeamercolor{institute}{fg=LE2IUTBMdarkgray}
\setbeamercolor{date}{fg=LE2IUTBMmagenta}
\setbeamercolor{frametitle}{fg=white}
\setbeamercolor{framesubtitle}{fg=white}
\setbeamercolor{maintitle}{fg=black}
\setbeamercolor{footnote}{fg=LE2IUTBMdarkgray}
\setbeamercolor{sidenote}{fg=LE2IUTBMblue}
\setbeamercolor{button}{bg=LE2IUTBMblue,fg=white}
\setbeamercolor{description item}{fg=LE2IUTBMmagenta}
\setbeamercolor{block title}{fg=white,bg=LE2IUTBMlightblue}
\setbeamercolor{block body}{fg=black,bg=LE2IUTBMlightestblue}
\setbeamercolor{block title alerted}{fg=white,bg=LE2IUTBMmagenta}
\setbeamercolor{block body alerted}{fg=LE2IUTBMmagenta,bg=LE2IUTBMlightestmagenta}
\setbeamercolor{block body remark}{fg=LE2IUTBMblue,bg=LE2IUTBMlightestblue}
\setbeamercolor{block body alerted emphased text}{fg=LE2IUTBMdarkmagenta}
\setbeamercolor{block body alerted alerted text}{fg=red}
\setbeamercolor{block body remark emphased text}{fg=LE2IUTBMdarkblue}
\setbeamercolor{block body remark alerted text}{fg=LE2IUTBMmagenta}
\setbeamercolor{block title example}{fg=black,bg=LE2IUTBMlightgray}
\setbeamercolor{block title definition}{parent=block title,bg=LE2IUTBMblue}
\setbeamercolor{block body definition}{parent=block body}

\setbeamercolorXXX{circle progress bar}{bg=LE2IUTBMdarkgray,fg=white}
\setbeamercolorXXX{circle progress bar/first bar}{bg=LE2IUTBMlightblue}
\setbeamercolorXXX{circle progress bar/second bar}{bg=LE2IUTBMmagenta}
\setbeamercolorXXX{circle progress bar/third bar}{bg=LE2IUTBMdarkgray}

\setbeamercolorXXX{plain frametitle}{fg=LE2IUTBMlightblue}
\setbeamercolorXXX{plain framesubtitle}{fg=LE2IUTBMlightblue}

\setbeamercolorXXX{code keyword}{fg=LE2IUTBMblue}
\setbeamercolorXXX{code string}{fg=LE2IUTBMmagenta}
\setbeamercolorXXX{code comment}{fg=LE2IUTBMgreen}

\mode<all>

