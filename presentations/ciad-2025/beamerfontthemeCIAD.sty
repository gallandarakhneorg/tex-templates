\ProvidesPackage{beamerfontthemeCIAD}
   [2025/04/19 Beamer Font 'CIAD' Theme]

\mode<presentation>

\usefonttheme{default}

%\RequirePackage[T1]{fontenc}

\setbeamerfont{author}{size=\large}
\setbeamerfont{date}{size=\large}
\setbeamerfont{example text}{series=\bfseries}
\setbeamerfont{frametitle}{series=\bfseries,size=\large}
\setbeamerfont{framesubtitle}{series=\mdseries,size=\large}
\setbeamerfont{section}{series=\bfseries}
\setbeamerfont{title}{series=\bfseries}
\setbeamerfont{righttitle}{parent=title,size=\normalsize}
\setbeamerfont{icon grid}{parent=normal text,size=\tiny}
\setbeamerfont{author in head/foot}{series=\mdseries,size=\tiny}
\setbeamerfont{institute}{series=\mdseries,size=\tiny}
\setbeamerfont{sidenote}{series=\mdseries,size=\tiny}
\setbeamerfont{section in head/foot}{size=\tiny}
\setbeamerfont{block title definition}{parent=block title}
\setbeamerfont{block body definition}{parent=block body}
\setbeamerfont{text in small title area}{size=\tiny,series=\bfseries}
\setbeamerfont{text in big title area}{size=\small,series=\bfseries}
\setbeamerfont{subtext in big title area}{size=\scriptsize}
\setbeamerfont{part title}{size=\LARGE,series=\bfseries}
\setbeamerfont{title in left anchor block}{parent=normal text,series=\bfseries}
\setbeamerfont{title in right anchor block}{parent=normal text,series=\bfseries}
\setbeamerfont{circled text in left anchor block}{parent=normal text,size=\Large,series=\bfseries}
\setbeamerfont{circled text in right anchor block}{parent=normal text,size=\Large,series=\bfseries}
\setbeamerfont{library slide}{parent=normal text,size=\small}
\setbeamerfont{fancy box}{parent=normal text,size=\scriptsize}
\setbeamerfont{corner in fancy box}{parent=normal text,size=\scriptsize,series=\bfseries}
\setbeamerfont{title in fancy box}{parent=normal text,size=\large,series=\bfseries}
\setbeamerfont{emphased text}{parent=normal text}
\setbeamerfont{emphased emphased text}{parent=normal text,series=\bfseries}
\setbeamerfont{emphased text in fancy box}{parent=normal text}
\setbeamerfont{emphased emphased text in fancy box}{parent=normal text,series=\bfseries}
\setbeamerfont{right arrow sequence}{parent=normal text}
\setbeamerfont{bottom arrow sequence}{parent=normal text}

\mode
<all>
