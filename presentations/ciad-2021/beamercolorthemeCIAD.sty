\ProvidesPackage{beamercolorthemeCIAD}
   [2021/08/01 Beamer 'CIAD' Color Theme]

\mode<presentation>

\RequirePackage{xcolor}

\newcommand{\setbeamercolorXXX}[2]{%
	\setbeamercolor{#1}{#2}%
	\usebeamercolor{#1}%
	\definecolor{#1.fg}{named}{fg}%
	\definecolor{#1.bg}{named}{bg}%
}

\definecolor{CIADgreen}{RGB}{149,188,15}
\definecolor{CIADdarkgreen}{RGB}{75,94,8}
\definecolor{CIADlightgreen}{RGB}{214,244,112}
\definecolor{CIADlightestgreen}{RGB}{235,250,184}
\definecolor{CIADmorelightestgreen}{RGB}{243,250,218}

\definecolor{CIADblue}{RGB}{0,41,75}

\definecolor{CIADmagenta}{RGB}{153,30,102}
\definecolor{CIADdarkmagenta}{RGB}{77,15,51}
\definecolor{CIADlightmagenta}{RGB}{204,122,170}
\definecolor{CIADlightestmagenta}{RGB}{250,240,246}

\definecolor{CIADdarkgray}{RGB}{100,100,100}
\definecolor{CIADlightgray}{RGB}{236,236,236}
\definecolor{CIADlightestgray}{RGB}{253,253,253}

\setbeamercolor{normal text}{fg=black}
\setbeamercolor{example text}{fg=CIADdarkgreen}
\setbeamercolor{emphased text}{fg=CIADdarkgreen}
\setbeamercolor{alerted text}{fg=CIADmagenta}
\setbeamercolor{verse}{fg=CIADdarkgreen}
\setbeamercolor{quotation}{fg=CIADdarkgreen}
\setbeamercolor{quote}{fg=CIADgreen}
\setbeamercolor{semiverbatim}{fg=CIADdarkgray}
\setbeamercolor{structure}{fg=CIADgreen}
\setbeamercolor{item projected}{fg=white,bg=CIADgreen}
\setbeamercolor{background canvas}{bg=white}
\setbeamercolor{author}{fg=CIADgreen}
\setbeamercolor{author in head/foot}{fg=CIADdarkgray}
\setbeamercolor{title in head/foot}{fg=CIADdarkgray}
\setbeamercolor{date in head/foot}{fg=CIADdarkgray}
\setbeamercolor{text in small title area}{fg=black}
\setbeamercolor{text in big title area}{fg=white}
\setbeamercolor{institute}{fg=CIADdarkgray}
\setbeamercolor{date}{fg=CIADmagenta}
\setbeamercolorXXX{frametitle}{fg=CIADgreen,bg=black}
\setbeamercolor{framesubtitle}{fg=white}
\setbeamercolor{frametitle fancy words}{fg=white}
\setbeamercolor{maintitle}{fg=white}
\setbeamercolor{maintitle fancy letter}{fg=CIADdarkgreen}
\setbeamercolorXXX{righttitle}{fg=white}
\setbeamercolor{normal text in righttitle}{fg=white}
\setbeamercolorXXX{lawn}{bg=CIADgreen,fg=white}
\setbeamercolorXXX{icon grid}{fg=white}
\setbeamercolorXXX{library slide}{bg=CIADlightgray,fg=black}
\setbeamercolor{part title}{fg=white}
\setbeamercolor{part title fancy letter}{fg=CIADgreen}
\setbeamercolor{footnote}{fg=CIADdarkgray}
\setbeamercolor{sidenote}{fg=CIADgreen}
\setbeamercolor{button}{bg=CIADgreen,fg=white}
\setbeamercolor{description item}{fg=CIADmagenta}
\setbeamercolor{block title}{fg=white,bg=black}
\setbeamercolor{block body}{fg=black,bg=CIADlightgray}
\setbeamercolor{block title alerted}{fg=white,bg=CIADmagenta}
\setbeamercolor{block body alerted}{fg=CIADmagenta,bg=CIADlightestmagenta}
\setbeamercolor{block body remark}{fg=black,bg=CIADlightgray}
\setbeamercolor{block body alerted emphased text}{fg=CIADdarkmagenta}
\setbeamercolor{block body alerted alerted text}{fg=red}
\setbeamercolor{block body remark emphased text}{fg=CIADdarkgreen}
\setbeamercolor{block body remark alerted text}{fg=CIADmagenta}
\setbeamercolor{block title example}{fg=black,bg=CIADlightgray}
\setbeamercolorXXX{block title definition}{parent=block title,fg=CIADgreen}
\setbeamercolorXXX{block body definition}{parent=block body}

\setbeamercolorXXX{title in left anchor block}{parent=normal text}
\setbeamercolorXXX{title in right anchor block}{parent=normal text}
\setbeamercolorXXX{circled text in left anchor block}{fg=CIADgreen}
\setbeamercolorXXX{circled text in right anchor block}{fg=black}
\setbeamercolorXXX{line in left anchor block}{fg=black, bg=black}
\setbeamercolorXXX{line in right anchor block}{fg=black, bg=white}

% Current sections
\setbeamercolor{section in toc}{fg=white}
\setbeamercolor{subsection in toc}{fg=white}
\setbeamercolor{subsubsection in toc}{fg=white}
% Other sections
\setbeamercolor{section in toc shaded}{fg=black}
\setbeamercolor{subsection in toc shaded}{fg=black}
\setbeamercolor{subsubsection in toc shaded}{fg=black}
% Section number in the squares
\setbeamercolor{section number projected}{fg=white}

\setbeamercolorXXX{footline}{bg=CIADlightgray,fg=black}

\setbeamercolorXXX{circle progress bar}{bg=footline.bg,fg=CIADdarkgray}
