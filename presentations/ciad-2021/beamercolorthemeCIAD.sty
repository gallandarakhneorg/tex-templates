\setbeamercolorXXX{circle progress bar/second bar}{bg=CIADmagenta}
\setbeamercolorXXX{circle progress bar/third bar}{bg=footline.bg}

\setbeamercolorXXX{plain frametitle}{fg=CIADgreen}
\setbeamercolorXXX{plain framesubtitle}{fg=CIADlightgreen}
\setbeamercolorXXX{plain frametitle fancy words}{fg=CIADlightgreen}

\setbeamercolorXXX{code keyword}{fg=CIADgreen}
\setbeamercolorXXX{code string}{fg=CIADmagenta}
\setbeamercolorXXX{code comment}{fg=CIADblue}

\setbeamercolorXXX{table header}{fg=CIADlightgreen,bg=CIADdarkgray}
\setbeamercolorXXX{table rules}{fg=CIADdarkgray}

\setbeamercolorXXX{top background in toc}{bg=frametitle.bg}
\setbeamercolorXXX{bottom background in toc}{bg=footline.bg}

\setbeamercolorXXX{fancy box}{bg=black, fg=CIADlightgray}
\setbeamercolorXXX{title in fancy box}{fg=CIADgreen}
\setbeamercolorXXX{corner in fancy box}{fg=white, bg=CIADgreen}

\mode<all>

